
NODE_ENV=lambda
STAGE=prod
REGION=ap-south-1

# === AWS Services ===
AWS_REGION=ap-south-1
DYNAMODB_REGION=ap-south-1

# API Gateway (Production endpoint)
API_GATEWAY_URL=https://api.yourdomain.com

# === Frontend URLs (Production) ===
FRONTEND_URL=https://yourdomain.com
FRONTEND_CALLBACK_URL=https://yourdomain.com/auth_callback

# === Payment Gateway (Razorpay - Production Keys) ===
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# === Email Service (SES recommended for production) ===
EMAIL_SERVICE=aws_ses
AWS_SES_REGION=ap-south-1
EMAIL_FROM=noreply@yourdomain.com

# === OAuth Providers (Production Apps) ===
# Google
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxx

# Facebook
FACEBOOK_APP_ID=xxxxxxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# === Session & Security ===
JWT_SECRET=your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
SESSION_SECRET=your-session-secret-key

# === Feature Flags ===
ENABLE_RAZORPAY=true
ENABLE_GOOGLE_AUTH=true
ENABLE_FACEBOOK_AUTH=true
ENABLE_EMAIL_VERIFICATION=true

# === Logging ===
LOG_LEVEL=info  # Use 'info' or 'error' only in production
ENABLE_REQUEST_LOGGING=false  # Disable verbose logging in production

# === Lambda Specific ===
LAMBDA_MEMORY=1024  # Higher memory for better performance
LAMBDA_TIMEOUT=30

# === Monitoring ===
ENABLE_XRAY_TRACING=true
ENABLE_CLOUDWATCH_METRICS=true
