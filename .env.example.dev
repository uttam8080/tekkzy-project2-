# AWS Lambda Development Environment Variables
# Copy this file to .env.dev and fill in your values

# === Core Environment ===
NODE_ENV=lambda
STAGE=dev
REGION=ap-south-1

# === AWS Services ===
AWS_REGION=ap-south-1
DYNAMODB_REGION=ap-south-1

# API Gateway
API_GATEWAY_URL=https://xxxxx.execute-api.ap-south-1.amazonaws.com/dev

# === Database (DynamoDB) ===
# For local development with serverless-dynamodb-local
DYNAMODB_LOCAL=true
DYNAMODB_ENDPOINT=http://localhost:8000

# === Authentication (AWS Cognito) ===
COGNITO_REGION=ap-south-1
COGNITO_USER_POOL_ID=ap-south-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_AUTHORITY=https://cognito-idp.ap-south-1.amazonaws.com/ap-south-1_XXXXXXXXX

# === Frontend URLs ===
FRONTEND_URL=http://localhost:3000
FRONTEND_CALLBACK_URL=http://localhost:3000/auth_callback

# === Payment Gateway (Razorpay) ===
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# === Email Service (Nodemailer) ===
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password  # Use app password, not actual Gmail password
EMAIL_FROM=noreply@foodhub.com

# === OAuth Providers ===
# Google
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxx

# Facebook
FACEBOOK_APP_ID=xxxxxxxxxxxxxxxxx
FACEBOOK_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# === Session & Security ===
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
SESSION_SECRET=your-session-secret-key

# === Feature Flags ===
ENABLE_RAZORPAY=true
ENABLE_GOOGLE_AUTH=true
ENABLE_FACEBOOK_AUTH=true
ENABLE_EMAIL_VERIFICATION=true

# === Logging ===
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# === Lambda Specific ===
LAMBDA_MEMORY=512
LAMBDA_TIMEOUT=30
